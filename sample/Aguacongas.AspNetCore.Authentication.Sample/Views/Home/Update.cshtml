@model AuthenticationViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update scheme</h1>

<h4>@HandlerHelper.GetProviderName(@Model.HandlerType)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="HandlerType" type="hidden" />
            <div class="form-group">
                <h5>@Model.Scheme</h5>
                <input asp-for="Scheme" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label">display name</label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label">client id</label>
                <input asp-for="ClientId" class="form-control" />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientSecret" class="control-label">client secret</label>
                <input asp-for="ClientSecret" class="form-control" />
                <span asp-validation-for="ClientSecret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Delete" asp-route-scheme="@Model.Scheme" class="btn btn-danger">Delete</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
